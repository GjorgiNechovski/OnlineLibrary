@model OnlineLibrary.Domain.Domain.Author

@{
    ViewData["Title"] = "Create";
}

<style>
    .create-author-header {
        color: midnightblue;
        margin-bottom: 20px;
    }

    .create-container {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #e3f2fd; /* Matches other views background */
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary-custom {
        background-color: #17a2b8; /* Matches btn-info-custom color */
        color: #fff;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        height: 36px;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        text-decoration: none;
    }

        .btn-primary-custom:hover {
            background-color: #117a8b; /* Darker shade for hover effect */
        }

    .back-btn {
        margin-top: 20px;
    }

    .btn-outline-secondary-custom {
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        border: 1px solid #6c757d;
        color: #6c757d;
        background-color: transparent;
        width: 18%; /* Fixed button width */
        height: 36px;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-outline-secondary-custom:hover {
            background-color: #6c757d;
            color: #fff;
        }
</style>

<div class="create-author-header">
    <h1>Create Author</h1>
</div>

<div class="create-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary-custom" />
        </div>
    </form>
</div>

<div class="d-flex justify-content-end back-btn">
    <a class="btn btn-outline-secondary-custom" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
