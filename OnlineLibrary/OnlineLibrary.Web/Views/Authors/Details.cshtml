@model OnlineLibrary.Domain.Domain.Author

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-header {
        color: midnightblue;
        margin-bottom: 20px;
    }

    .details-container {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #e3f2fd; /* Matches other views background */
        padding: 20px;
        margin-bottom: 20px;
    }

    .details-table {
        margin-bottom: 20px;
    }

    .btn-primary-custom {
        background-color: #17a2b8; /* Matches btn-info-custom color */
        color: #fff;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        height: 36px;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        text-decoration: none;
    }

        .btn-primary-custom:hover {
            background-color: #117a8b; /* Darker shade for hover effect */
        }

    .back-btn {
        margin-top: 20px;
    }

    .btn-outline-secondary-custom {
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        border: 1px solid #6c757d;
        color: #6c757d;
        background-color: transparent;
        width: 18%; /* Fixed button width */
        height: 36px;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-outline-secondary-custom:hover {
            background-color: #6c757d;
            color: #fff;
        }
</style>

<div class="details-header">
    <h1>Author Details</h1>
</div>

<div class="details-container">
    <h4>Author</h4>
    <hr />
    <dl class="row details-table">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-end back-btn">
    <a class="btn btn-primary-custom" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-outline-secondary-custom" asp-action="Index">Back to List</a>
</div>
