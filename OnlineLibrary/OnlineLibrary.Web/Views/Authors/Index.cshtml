@model List<OnlineLibrary.Domain.Domain.Author>

@{
    ViewData["Title"] = "Authors";
}

<style>
    .container-custom {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #e3f2fd;
        padding: 20px;
        margin-bottom: 20px;
    }

    .header-custom {
        color: midnightblue;
        margin-bottom: 20px;
    }

    .table-custom {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        margin-top: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        color: midnightblue;
    }

    .btn-edit-custom,
    .btn-danger-custom,
    .btn-details-custom {
        background-color: #4a90e2;
        color: #fff;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        text-decoration: none;
        margin-right: 5px; /* Add margin to create space between buttons */
    }

        .btn-edit-custom:hover {
            background-color: #357abd;
        }

    .btn-danger-custom {
        background-color: #ff6f61;
    }

        .btn-danger-custom:hover {
            background-color: #e55d50;
        }

    .btn-details-custom {
        background-color: #5bc0de;
    }

        .btn-details-custom:hover {
            background-color: #31b0d5;
        }

    .btn-group a:last-child {
        margin-right: 0; 
    }

    .btn-info-custom {
        background-color: #17a2b8;
        color: #fff;
        border-radius: 0.25rem;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
</style>

<div class="container-custom">
    <div class="header-custom">
        <h1>Authors</h1>
    </div>

    <div>
        <a asp-action="Create" class="btn btn-info-custom m-4">Create New</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => author.Name)</td>
                    <td>@Html.DisplayFor(modelItem => author.LastName)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Authors" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-edit-custom">Edit</a>
                            <a asp-controller="Authors" asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger-custom">Delete</a>
                            <a asp-controller="Authors" asp-action="Details" asp-route-id="@author.Id" class="btn btn-details-custom">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
