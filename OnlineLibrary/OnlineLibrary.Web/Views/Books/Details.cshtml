@model OnlineLibrary.Domain.Domain.Book

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <h1 class="col-9">Details</h1>
    <form asp-controller="Order" asp-action="AddToCart" method="post" class="col-3">
        <div class="form-group">
            <input type="hidden" id="bookId" name="bookId" value="@Model.Id" />
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" name="quantity" class="form-control" required />
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <button type="submit" class="btn btn-primary" @(Model.QuantityInInventory == 0 ? "disabled" : "")>
            @(Model.QuantityInInventory == 0 ? "Out of Stock" : "Add to Cart")
        </button>
    </form>
</div>


<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @(Model.Author.Name + " " + Model.Author.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookCoverUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.BookCoverUrl" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantityInInventory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantityInInventory)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
