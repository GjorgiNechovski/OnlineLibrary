<div class="container " style="margin-top:20vh;">
    <h1 style="color:midnightblue;" class="text-center fw-bold mb-4">Import Users</h1>
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <div class="card" style="border: none; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="card-header" style="background-color: #17a2b8; color: #f8f9fa;">
                    <h2 class="h5 text-center mb-0">Upload User List</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ImportAllUsers" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Select a file to import users:</label>
                            <input class="form-control form-control-sm" id="file" type="file" name="file">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-info mt-2 w-75">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-outline-secondary" style="border-radius: 0.25rem; padding: 0.5rem 1rem;" asp-controller="User" asp-action="Index">
            Back to Users
        </a>
        <a class="btn btn-outline-secondary" style="border-radius: 0.25rem; padding: 0.5rem 1rem;margin-left:3vh;" asp-controller="Book" asp-action="Index">
            View Books
        </a>
        <a class="btn btn-outline-secondary" style="border-radius: 0.25rem; padding: 0.5rem 1rem;margin-left:3vh;" asp-controller="User" asp-action="Index">
            View Users
        </a>
    </div>
</div>
