@model List<OnlineLibraryAdmin.Web.Models.LibraryMember>;

<form asp-action="ImportAllUsers" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <input type="submit" />
</form>


@for(int i=0;i<Model.Count(); i++)
{
    if (i % 3 == 0)
    {
        @:<div class="row">
    }

    <div class="col-3 m-4">
        <p>@Model[i].Id</p>
        <p>@Model[i].Name</p>
        <p>@Model[i].LastName</p>
        <p>@Model[i].Email</p>
    </div>

    if(i % 3 == 2)
    {
        @:</div>
    }
}